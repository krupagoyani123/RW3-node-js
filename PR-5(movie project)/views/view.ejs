<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Movie List</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Rubik:wght@300;500;600&display=swap");

        /* General Styles */
        body {
            font-family: "Rubik", sans-serif;
            margin: 0;
            background: url('https://i.pinimg.com/736x/96/6a/dd/966addaa1d8a512596eb14f27e87cda6.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #edf2f4;
        }

        h1 {
            font-size: 2.5rem;
            text-transform: uppercase;
            color: #d90429;
            letter-spacing: 2px;
            text-align: center;
            margin: 20px 0;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
        }

        .container {
            margin-left: 270px;
            padding: 20px;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
            background: rgba(0, 0, 0, 0.85);
            padding: 20px;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.5);
        }

        .sidebar a {
            display: block;
            padding: 15px;
            margin-bottom: 10px;
            background: rgba(217, 4, 41, 0.8);
            color: #edf2f4;
            text-align: center;
            border-radius: 8px;
            text-transform: uppercase;
            font-size: 1rem;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .sidebar a:hover {
            background: rgba(217, 4, 41, 1);
            box-shadow: 0 4px 10px rgba(217, 4, 41, 0.5);
        }

        .card-group {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .card {
            background: rgba(0, 0, 0, 0.85);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            width: 18rem;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.7);
        }

        .card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .card-title {
            color: #edf2f4;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .list-group-item {
            background: transparent;
            border: none;
            color: #d90429;
            text-align: left;
            padding: 10px 15px;
            font-size: 1rem;
        }

        .card-body {
            padding: 15px;
        }

        .card-link {
            display: inline-block;
            text-align: center;
            width: 48%;
            padding: 10px;
            border-radius: 5px;
            font-size: 1rem;
            text-transform: uppercase;
            text-decoration: none;
            font-weight: 600;
            color: #edf2f4;
            background: linear-gradient(135deg, #d90429, #a3021f);
            box-shadow: 0 4px 10px rgba(217, 4, 41, 0.5);
            transition: background 0.3s ease, box-shadow 0.3s ease;
        }

        .card-link:hover {
            background: linear-gradient(135deg, #a3021f, #d90429);
            box-shadow: 0 6px 15px rgba(217, 4, 41, 0.7);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .sidebar {
                position: relative;
                width: 100%;
                margin-bottom: 20px;
            }

            .container {
                margin: 0;
            }

            .card {
                width: 90%;
            }

            h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="/insert"><i class="fas fa-plus-circle"></i> Add Movie</a>
        <a href="/views"><i class="fas fa-film"></i> View Movies</a>
        <a href="/settings"><i class="fas fa-cogs"></i> Settings</a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="container">
        <h1>Movie List</h1>
        <div class="card-group">
            <% users.map((val, i) => { %>
                <div class="card">
                    <!-- Movie Image -->
                    <img src="<%= val.image %>" alt="Movie Image">

                    <!-- Movie Details -->
                    <div class="card-body">
                        <h5 class="card-title"><%= val.name %></h5>
                    </div>

                    <!-- Movie Description and Price -->
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Description:</strong> <%= val.desc %></li>
                        <li class="list-group-item"><strong>Price:</strong> $<%= val.price %></li>
                    </ul>

                    <!-- Action Buttons -->
                    <div class="card-body">
                        <a href="/delete?id=<%= val.id %>" class="card-link">Delete</a>
                        <a href="/edit?id=<%= val.id %>" class="card-link">Edit</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>

</html>
