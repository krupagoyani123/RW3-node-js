<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - Edit Movie</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.7/css/all.css">
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap");

    /* General Styles */
    body {
      font-family: "Rubik", sans-serif;
      margin: 0;
      padding: 0;
      background: url('https://via.placeholder.com/1920x1080') no-repeat center center fixed;
      background-size: cover;
      color: #edf2f4;
    }

    h1 {
      font-size: 3rem;
      margin-top: 30px;
      text-transform: uppercase;
      color: #d90429;
      text-align: center;
      letter-spacing: 3px;
      text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
    }

    .admin-panel {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background: rgba(0, 0, 0, 0.85);
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.8);
    }

    .form-container {
      text-align: center;
      padding: 30px;
    }

    /* Movie Image */
    img {
      width: 150px;
      height: 150px;
      border-radius: 10px;
      margin-bottom: 20px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.7);
    }

    /* Input Fields */
    input[type="text"],
    input[type="file"] {
      width: 100%;
      background: rgba(255, 255, 255, 0.1);
      color: #edf2f4;
      padding: 14px;
      border: 1px solid #495057;
      border-radius: 8px;
      margin-bottom: 20px;
      font-size: 1rem;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="file"]:focus {
      outline: none;
      border-color: #d90429;
      box-shadow: 0 0 10px rgba(217, 4, 41, 0.8);
    }

    input::placeholder {
      color: #adb5bd;
      font-size: 0.9rem;
    }

    /* Buttons */
    button {
      background: linear-gradient(135deg, #d90429, #a3021f);
      border: none;
      padding: 14px 20px;
      color: #edf2f4;
      font-size: 1rem;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
      font-family: "Rubik", sans-serif;
      text-transform: uppercase;
    }

    button:hover {
      background: linear-gradient(135deg, #a3021f, #d90429);
      box-shadow: 0 5px 15px rgba(217, 4, 41, 0.5);
    }

    .form-btns {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 250px;
      background: rgba(0, 0, 0, 0.85);
      padding: 20px;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.8);
      z-index: 10;
    }

    .sidebar a {
      display: block;
      padding: 15px;
      margin-bottom: 15px;
      background: rgba(217, 4, 41, 0.8);
      color: #edf2f4;
      text-decoration: none;
      text-align: center;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: bold;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.6);
      transition: background 0.3s ease, box-shadow 0.3s ease;
    }

    .sidebar a:hover {
      background: rgba(217, 4, 41, 1);
      box-shadow: 0 4px 10px rgba(217, 4, 41, 0.5);
    }

    .main-content {
      margin-left: 270px;
      padding: 20px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .sidebar {
        position: relative;
        width: 100%;
        margin-bottom: 20px;
      }

      .main-content {
        margin: 0;
      }

      h1 {
        font-size: 2rem;
      }
    }
  </style>
</head>

<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
    <a href="/insert"><i class="fas fa-plus-circle"></i> Add Movie</a>
    <a href="/views"><i class="fas fa-film"></i> View Movies</a>
    <a href="/settings"><i class="fas fa-cogs"></i> Settings</a>
    <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <div class="admin-panel">
      <h1>Edit Movie</h1>
      <div class="form-container">
        <form action="/update" method="post" enctype="multipart/form-data">

          <!-- Movie Image -->
          <img src="<%= singal?.image || '/default-image-path.jpg' %>" alt="Movie Image" />

          <!-- File Upload -->
          <input type="file" name="image" />

          <!-- Movie Details -->
          <input type="text" placeholder="Movie Name" name="name" value="<%= singal?.name || '' %>" required />
          <input type="text" placeholder="Movie Description" name="desc" value="<%= singal?.desc || '' %>" required />
          <input type="text" placeholder="Movie Price" name="price" value="<%= singal?.price || '' %>" required />
          <input type="hidden" name="editid" value="<%= singal?.id || '' %>">

          <!-- Buttons -->
          <div class="form-btns">
            <button type="submit"><i class="fas fa-save"></i> Save Changes</button>
          </div>

        </form>
      </div>
    </div>
  </div>

</body>

</html>
