<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #adfaff 0%, #9ac4ff 100%);

            font-family: 'Poppins', sans-serif;
            color: #fff;
        }
        h1 {
            margin-top: 30px;
            font-weight: bold;
            color: #fff;
            font-size: 2.8rem;
        }
        .form-container, .table-container {
            background-color: #ffffff;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            transition: all 0.3s ease;
        }
        .form-container:hover, .table-container:hover {
            transform: translateY(-10px);
            box-shadow: 0px 20px 40px rgba(0, 0, 0, 0.2);
        }
        .form-label {
            font-weight: bold;
            color: #495057;
        }
        .btn-primary, .btn-warning, .btn-danger {
            font-size: 1.1rem;
            padding: 10px 20px;
            border-radius: 50px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }
        .btn-primary {
            background-color: #ffa2b2;
            border: none;
        }
        .btn-primary:hover {
            background-color: #fb598f;
            box-shadow: 0 15px 25px rgba(233, 30, 99, 0.3);
            transform: translateY(-3px);
        }
        .btn-warning {
            background-color: #ffc107;
            border: none;
        }
        .btn-warning:hover {
            background-color: #e0a800;
        }
        .btn-danger {
            background-color: #dc3545;
            border: none;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
        .table-hover tbody tr:hover {
            background-color: #f9f9f9;
            transition: background-color 0.2s ease-in-out;
        }
        .table-container h1 {
            margin-bottom: 20px;
            font-weight: bold;
            color: #343a40;
        }
        .table {
            background-color: #ffffff;
            border-radius: 10px;
        }
        .table thead {
            background-color: #343a40;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Form to Add Book -->
        <div class="text-center">
            <h1>Book Store Details</h1>
        </div>
        <div class="form-container mx-auto" style="max-width: 600px;">
            <form action="/insertRecord" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Book Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Book Price</label>
                    <input type="number" class="form-control" id="price" name="price" required>
                </div>
                <div class="mb-3">
                    <label for="pages" class="form-label">Book Pages</label>
                    <select class="form-select" id="pages" name="pages" required>
                        <option value="">--- Select Pages ---</option>
                        <option value="200-400">200-400</option>
                        <option value="400-600">400-600</option>
                        <option value="600-800">600-800</option>
                        <option value="800-1000">800-1000</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Book Author</label>
                    <input type="text" class="form-control" id="author" name="author" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Add Book</button>
                </div>
            </form>
        </div>

        <!-- Table to View Books -->
        <div class="text-center table-container">
            <h1>View Books</h1>
            <table class="table table-bordered table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Book Name</th>
                        <th>Book Price</th>
                        <th>Book Pages</th>
                        <th>Book Author</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% record.map((value, i) => { 
                        const { _id, name, price, pages, author } = value; %>
                        <tr>
                            <td><%= i + 1 %></td>
                            <td><%= name %></td>
                            <td><%= price %></td>
                            <td><%= pages %></td>
                            <td><%= author %></td>
                            <td>
                                <a href="/deleterecord?deleteid=<%= _id %>" class="btn btn-danger btn-sm">Delete</a>
                                <a href="/editrecord?editid=<%= _id %>" class="btn btn-warning btn-sm">Edit</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
