<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Business Blog</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        body {
            font-family: "Arial", sans-serif;
        }

        /* Preloader */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 100%;
            background: rgba(255, 255, 255, 0.9);
            z-index: 9999;
        }

        .navbar-brand img {
            width: 140px;
        }

        /* Hero Section */
        .hero {
            background: linear-gradient(to right, #4facfe, #00f2fe);
            color: white;
            padding: 5rem 0;
        }

        .hero h1 {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
        }

        /* Blog Section */
        .blog .card {
            border: none;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .blog .card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .blog .card-img-top {
            border-radius: 8px;
        }

        .blog .btn-outline-primary {
            transition: all 0.3s ease-in-out;
        }

        .blog .btn-outline-primary:hover {
            background-color: #4facfe;
            color: white;
            border-color: #4facfe;
        }

        /* Footer */
        footer {
            background: linear-gradient(to right, #4facfe, #00f2fe);
            color: white;
        }

        footer a {
            color: white;
            transition: color 0.3s;
        }

        footer a:hover {
            color: #ddd;
        }
    </style>
</head>

<body>
    <!-- Preloader -->
    <div id="preloader" class="d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Header -->
    <header class="sticky-top bg-white shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="navbar-brand fw-bold" href="index.html">
                <img src="assets/frontend/img/logo/logo.png" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="index.html">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="about.html">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="contact.html">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="blog.html">Blog</a></li>
                </ul>
                <a href="contact.html" class="btn btn-primary ms-lg-3">Contact Us</a>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero text-center">
        <div class="container">
            <h1 class="animate__animated animate__fadeInDown">Welcome to Our Blog</h1>
            <p class="animate__animated animate__fadeInUp">Explore insights, updates, and trends from the industry.</p>
        </div>
    </section>

    <!-- Blog Section -->
    <section class="blog py-5">
        <div class="container">
            <div class="row gy-4">
                <!-- Blog Card -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <img src="assets/frontend/img/blog/single_blog_1.png" class="card-img-top" alt="Blog">
                        <div class="card-body">
                            <h5 class="card-title">Innovative Business Solutions</h5>
                            <p class="card-text text-muted">Discover how to streamline your business operations for greater efficiency.</p>
                            <a href="single-blog.html" class="btn btn-outline-primary">Read More</a>
                        </div>
                    </div>
                </div>

                <!-- Repeat Blog Cards for more posts -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <img src="assets/frontend/img/blog/single_blog_2.png" class="card-img-top" alt="Blog">
                        <div class="card-body">
                            <h5 class="card-title">Sustainable Growth</h5>
                            <p class="card-text text-muted">Learn how to achieve long-term success in a competitive market.</p>
                            <a href="single-blog.html" class="btn btn-outline-primary">Read More</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <img src="assets/frontend/img/blog/single_blog_3.png" class="card-img-top" alt="Blog">
                        <div class="card-body">
                            <h5 class="card-title">Tech Trends 2024</h5>
                            <p class="card-text text-muted">Stay ahead with the latest technological advancements in business.</p>
                            <a href="single-blog.html" class="btn btn-outline-primary">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="py-4 text-center">
        <div class="container">
            <p class="mb-0">Â© <span id="year"></span> Business Blog. All rights reserved.</p>
            <div class="mt-2">
                <a href="#" class="text-white me-3"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-white"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Preloader
        window.addEventListener("load", () => {
            document.getElementById("preloader").style.display = "none";
        });

        // Dynamic Year
        document.getElementById("year").textContent = new Date().getFullYear();
    </script>
</body>

</html>
