<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css"> <!-- Link to your CSS -->
    <title>User Management</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #74ebd5, #ACB6E5);
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 20px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            overflow: hidden;
        }

        h2 {
            color: #6a11cb;
            margin-bottom: 20px;
            font-size: 1.8em;
            letter-spacing: 1px;
            text-align: center;
            text-transform: uppercase;
        }

        .user-form {
            margin-bottom: 30px;
        }

        .user-form table {
            width: 100%;
            border-spacing: 0 10px;
        }

        .user-form label {
            font-weight: bold;
            color: #333;
        }

        .user-form input[type="text"],
        .user-form input[type="date"] {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 5px;
            background-color: #f4f4f4;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px;
            font-size: 1em;
        }

        .submit-button {
            padding: 15px;
            background-image: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            font-size: 1.2em;
            transition: all 0.4s ease;
            width: 100%;
            font-weight: bold;
        }

        .submit-button:hover {
            background-image: linear-gradient(to right, #2575fc, #6a11cb);
            transform: translateY(-3px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

        .user-list {
            width: 100%;
            border-collapse: collapse;
            overflow-x: auto;
        }

        .user-list th,
        .user-list td {
            padding: 15px;
            border: 1px solid #ddd;
            text-align: left;
            background-color: rgba(255, 255, 255, 0.9);
        }

        .user-list th {
            background-color: #6a11cb;
            color: #fff;
            font-size: 1.1em;
            text-transform: uppercase;
        }

        .user-list tr:nth-child(even) {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .user-list tr:hover {
            background-color: #f1f1f1;
        }

        .action-link {
            background-color: #2575fc;
            color: #fff;
            padding: 8px 12px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s ease;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }

        .action-link:hover {
            background-color: #6a11cb;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Add User</h2>
        <form action="/recordInsert" method="post" class="user-form">
            <table>
                <tr>
                    <td><label for="name">Name:</label></td>
                    <td><input type="text" name="name" id="name" required></td>
                </tr>
                <tr>
                    <td><label for="phone">Phone:</label></td>
                    <td><input type="text" name="phone" id="phone" required></td>
                </tr>
                <tr>
                    <td><label for="date">Date:</label></td>
                    <td><input type="date" name="date" id="date" required></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" value="Add User" class="submit-button"></td>
                </tr>
            </table>
        </form>

        <h2>View Users</h2>
        <table class="user-list">
            <thead>
                <tr>
                    <th>Sr No</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% all.forEach((u, i)=> { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= u.name %></td>
                        <td><%= u.phone %></td>
                        <td><%= u.date %></td>
                        <td>
                            <a href="/delete?deleteid=<%= u.id %>" class="action-link">Delete</a> ||
                            <a href="/edit?id=<%= u.id %>" class="action-link">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>
